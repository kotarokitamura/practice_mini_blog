%p{"style" => "color:red"}
  #{show_error_message(@blog)}

%form{"action" => "/blogs", "method" => "post"}
  %div
    %input{"type"=>"text", "value" => "#{@blog.title}", "name" => "title"}
  %div
    %textarea{"name" => "body"}
      =@blog.body
  %div
    %input{:type=>"file",:name=>"file"}
  %div
    %input{"type"=>"submit", "value"=>"submit"}
